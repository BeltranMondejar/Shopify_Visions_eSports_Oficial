{% schema %}
{
  "name": "Header",
  "settings": [],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}

<header>
  <img src="{{ 'LOGO.png' | asset_url }}" alt="Logo" />
  <h1>Visions eSports</h1>

  <button
    class="menu-toggle"
    aria-label="Toggle menu"
    aria-expanded="false"
    aria-controls="main-navigation"
  >
    <span></span>
    <span></span>
    <span></span>
  </button>

  <nav id="main-navigation">
    <ul>
      <li><a href="{{ routes.root_url }}">INICIO</a></li>
      <li><a href="/pages/presentacion">PRESENTACIÓN</a></li>
      <li><a href="/pages/competiciones">COMPETICIONES</a></li>
      <li><a href="/pages/staff">STAFF</a></li>
      <li><a href="/pages/jugadores">JUGADORES</a></li>
      <li><a href="/pages/tienda">TIENDA</a></li>
      <li><a href="/pages/contacto">CONTACTO</a></li>
    </ul>
  </nav>

  <a href="https://discord.gg/m5SenFzMAd" target="_blank">
    <button class="discover">COMUNIDAD</button>
  </a>
</header>

<style>
  /* Importación de fuentes */
  @import url("https://fonts.googleapis.com/css2?family=Anybody:wght@400&family=Poppins:wght@700&display=swap");

  /* Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Anybody", sans-serif;
    background-color: #0e0e0e;
    color: #fff;
    padding-top: 100px;
    line-height: 1.6;
  }

  /* Header */
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 999;
    background-color: #0e0e0e;
    border-bottom: 2px solid #fdd712;
    display: flex;
    align-items: center;
    padding: 20px 50px;
    box-shadow: 0 4px 12px rgba(253, 215, 18, 0.1);
  }
  header img {
    height: 60px;
    margin-right: 20px;
  }
  header h1 {
    font-size: 1.5rem;
    color: #fdd712;
    font-weight: bold;
    font-family: "Poppins", sans-serif;
  }
  nav {
    margin-left: auto;
  }
  nav ul {
    display: flex;
    gap: 18px;
    list-style: none;
  }
  nav ul li a {
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
    font-family: "Anybody", sans-serif;
  }
  nav ul li a:hover {
    color: #fd5c05;
  }
  button.discover {
    margin-left: 30px;
    background-color: #fd5c05;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 8px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.2s;
    font-family: "Anybody", sans-serif;
  }
  button.discover:hover {
    background-color: #fdd712;
    transform: scale(1.05);
    color: #000;
  }

  /* Menú hamburguesa móvil */
  .menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    width: 30px;
    height: 25px;
    position: relative;
  }
  .menu-toggle span {
    position: absolute;
    height: 3px;
    width: 100%;
    background: #fd5c05;
    border-radius: 2px;
    left: 0;
    transition: all 0.3s ease;
  }
  .menu-toggle span:nth-child(1) {
    top: 0;
  }
  .menu-toggle span:nth-child(2) {
    top: 11px;
  }
  .menu-toggle span:nth-child(3) {
    bottom: 0;
  }

  /* Responsive móvil */
  @media (max-width: 768px) {
    body {
      padding-top: 60px;
    }

    header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 10px 15px;
      background-color: #0e0e0e;
      border-bottom: 2px solid #fdd712;
      z-index: 1000;
    }

    button.discover {
      order: 1;
      font-size: 0.75rem;
      padding: 6px 10px;
      border-radius: 6px;
      margin: 0;
      flex-shrink: 0;
    }

    header img {
      order: 2;
      height: 40px;
      max-width: 100px;
      width: auto;
      margin: 0 0 0 20px;
      object-fit: contain;
      flex-shrink: 0;
    }

    header h1 {
      order: 3;
      font-size: 1rem;
      color: #fdd712;
      font-weight: bold;
      font-family: "Poppins", sans-serif;
      margin: 0;
      white-space: nowrap;
      flex-grow: 1;
      text-align: center;
    }

    .menu-toggle {
      order: 4;
      display: block;
      background: none;
      border: none;
      font-size: 1.6rem;
      color: #fdd712;
      cursor: pointer;
      margin: 0;
      flex-shrink: 0;
    }

    /* Menú móvil desplegable - posición absoluta debajo del header */
    nav {
      order: 5;
      position: fixed;
      top: 60px; /* Altura del header para que quede justo debajo */
      left: 0;
      right: 0;
      background-color: #0e0e0e;
      border-top: 2px solid #fdd712;
      padding: 15px 0;
      display: none;
      flex-direction: column;
      gap: 10px;
      z-index: 999;
    }

    nav.active {
      display: flex;
    }

    nav ul {
      flex-direction: column;
      gap: 10px;
      list-style: none;
      padding: 0;
      margin: 0;
      text-align: center;
    }

    nav ul li {
      text-align: center;
    }

    nav ul li a {
      font-size: 1rem;
      color: #fff;
      font-weight: 500;
      text-decoration: none;
      transition: color 0.3s;
    }

    nav ul li a:hover {
      color: #fd5c05;
    }
  }
</style>

<script>
  const toggleButton = document.querySelector(".menu-toggle");
  const nav = document.querySelector("nav");

  toggleButton.addEventListener("click", () => {
    nav.classList.toggle("active");
    const expanded =
      toggleButton.getAttribute("aria-expanded") === "true" || false;
    toggleButton.setAttribute("aria-expanded", !expanded);
  });
</script>
