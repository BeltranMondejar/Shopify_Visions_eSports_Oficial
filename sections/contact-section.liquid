{% schema %}
{
  "name": "Página Contacto",
  "settings": [],
  "presets": [
    {
      "name": "Contacto"
    }
  ]
}
{% endschema %}

<section class="footer-container">
  <div class="footer-left">
    <h2>Visions eSports</h2>
    <p>Más que un equipo, una familia.</p>
    <p>Correo: visionsesports.esp@gmail.com</p>

    <h4>Síguenos</h4>
    <div class="social-icons">
      <a href="https://x.com/eSports_visions" aria-label="Twitter">
        <img
          src="https://cdn-icons-png.flaticon.com/512/733/733579.png"
          alt="Twitter icon"
        />
      </a>
      <a href="https://discord.gg/m5SenFzMAd" aria-label="Discord">
        <img
          src="https://cdn-icons-png.flaticon.com/512/5968/5968756.png"
          alt="Discord icon"
        />
      </a>
      <a href="https://www.twitch.tv/esports_visions" aria-label="Twitch">
        <img
          src="https://cdn-icons-png.flaticon.com/512/2111/2111668.png"
          alt="Twitch icon"
        />
      </a>
      <a
        href="https://www.tiktok.com/@visions.esports?lang=es-419"
        aria-label="TikTok"
      >
        <img
          src="https://cdn-icons-png.flaticon.com/512/3046/3046121.png"
          alt="TikTok icon"
        />
      </a>
      <a href="https://www.youtube.com/@VisionsEsports" aria-label="YouTube">
        <img
          src="https://cdn-icons-png.flaticon.com/512/1384/1384060.png"
          alt="YouTube icon"
        />
      </a>
    </div>
  </div>

  <div class="footer-right">
    <h3>Contáctanos</h3>
    {% form 'contact' %} {% if form.posted_successfully? %}
    <p class="form-success">¡Tu mensaje ha sido enviado!</p>
    {% endif %} {% if form.errors %}
    <div class="form-errors">
      <ul>
        {% for field in form.errors %}
        <li>{{ form.errors.messages[field] }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    <input
      type="text"
      id="ContactForm-name"
      name="contact[name]"
      placeholder="Tu nombre"
      required
    />
    <input
      type="email"
      id="ContactForm-email"
      name="contact[email]"
      placeholder="Tu correo"
      required
    />
    <textarea
      id="ContactForm-body"
      name="contact[body]"
      placeholder="Tu mensaje"
      rows="4"
      required
    ></textarea>
    <button type="submit">Enviar</button>
    {% endform %}
  </div>
</section>

<style>
  /* Importación de fuentes */
  @import url("https://fonts.googleapis.com/css2?family=Anybody:wght@400&family=Poppins:wght@700&display=swap");

  /* Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Anybody", sans-serif;
    background-color: #0e0e0e;
    color: #fff;
    padding-top: 100px;
    line-height: 1.6;
  }
  /* Contact Section */
  .footer-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 40px;
    padding: 40px 60px;
    background: linear-gradient(135deg, #121212, #1c1c1c);
  }
  .footer-left {
    flex: 1 1 400px;
    max-width: 480px;
  }
  .footer-left h2 {
    font-size: 2.2rem;
    color: #fdd712;
    font-weight: 800;
    margin-bottom: 10px;
    font-family: "Poppins", sans-serif;
  }
  .footer-left p {
    color: #ccc;
    margin-bottom: 10px;
    font-family: "Anybody", sans-serif;
  }
  .footer-left h4 {
    margin-top: 25px;
    margin-bottom: 10px;
    font-size: 1.3rem;
    color: #fdd712;
    border-bottom: 2px solid #fd5c05;
    display: inline-block;
    padding-bottom: 5px;
    font-family: "Poppins", sans-serif;
  }

  /* Social Icons Contact */
  .social-icons {
    display: flex;
    gap: 16px;
    margin-top: 10px;
  }
  .social-icons a {
    width: 40px;
    height: 40px;
    background-color: #2e2e2e;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
    box-shadow: 0 2px 6px rgba(253, 215, 18, 0.2);
  }
  .social-icons a:hover {
    background-color: #fd5c05;
    transform: scale(1.1);
  }
  .social-icons a img {
    width: 20px;
    height: 20px;
    filter: brightness(0) invert(1);
  }

  /* Formulario */
  .footer-right {
    flex: 1 1 400px;
    max-width: 480px;
    background-color: #181818;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 0 15px rgba(253, 215, 18, 0.2);
    font-family: "Anybody", sans-serif;
  }
  .footer-right h3 {
    text-align: center;
    color: #fdd712;
    font-size: 1.8rem;
    font-weight: bold;
    margin-bottom: 25px;
    font-family: "Poppins", sans-serif;
  }
  form {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }
  form input,
  form textarea {
    background-color: #1f1f1f;
    border: 2px solid #333;
    border-radius: 8px;
    padding: 12px 16px;
    color: #fff;
    font-size: 1rem;
    transition: border-color 0.3s;
    font-family: "Anybody", sans-serif;
  }
  form input:focus,
  form textarea:focus {
    border-color: #fd5c05;
    outline: none;
  }
  form button {
    background-color: #fd5c05;
    border: none;
    color: #fff;
    padding: 12px;
    border-radius: 8px;
    font-weight: bold;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.2s;
    font-family: "Anybody", sans-serif;
  }
  form button:hover {
    background-color: #fdd712;
    color: #000;
    transform: scale(1.05);
  }
  /*RESPONSIVE MOVIL*/
  @media (max-width: 768px) {
    body {
      padding-top: 60px; /* o 0, según el alto real de tu header móvil */
    }

    .footer-container {
      flex-direction: column;
      padding: 30px 20px;
      gap: 30px;
    }

    .footer-left {
      flex: 1 1 100%;
      max-width: 100%;
    }

    .footer-left h2 {
      font-size: 1.6rem;
      text-align: center;
    }

    .footer-left p {
      font-size: 0.95rem;
      text-align: center;
    }

    .footer-left h4 {
      font-size: 1.1rem;
      margin-top: 20px;
      margin-bottom: 8px;
      text-align: center;
      padding-bottom: 4px;
    }
  }
</style>
